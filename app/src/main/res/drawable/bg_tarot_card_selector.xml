<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- Glow effect -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <padding android:left="-4dp" android:right="-4dp" android:top="-4dp" android:bottom="-4dp" />
                    <solid android:color="#00000000" />
                    <stroke android:width="3dp" android:color="@color/m3_cosmic_tertiary" />
                </shape>
            </item>
            <!-- Card background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <solid android:color="@color/m3_cosmic_surface_tint" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/m3_cosmic_surface_variant" />
            <stroke android:width="1dp" android:color="@color/m3_cosmic_glow" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/m3_cosmic_surface" />
            <stroke android:width="1dp" android:color="@color/m3_cosmic_outline_variant" />
        </shape>
    </item>
</selector>