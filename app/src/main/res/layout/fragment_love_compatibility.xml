<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/m3_cosmic_background"
    android:padding="16dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_love_compatibility"
        android:layout_marginBottom="24dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/m3_cosmic_surface"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yeni Aday"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/m3_cosmic_star"
                android:fontFamily="@font/bold"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="İsim"
                app:hintTextColor="@color/m3_cosmic_tertiary"
                app:boxStrokeColor="@color/m3_cosmic_tertiary"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/m3_cosmic_on_surface"
                    android:fontFamily="@font/regular"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_birth_date"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Doğum Tarihi Seçin"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/m3_cosmic_on_surface"
                android:fontFamily="@font/regular"
                android:background="@drawable/bg_edittext_cosmic"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="24dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_calculate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Aşk Uyumunu Hesapla (10 Altın)"
                android:background="@drawable/btn_cosmic_primary"
                android:textColor="@color/m3_cosmic_on_tertiary"
                android:textSize="16sp"
                android:fontFamily="@font/medium"
                android:textAllCaps="false" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/m3_cosmic_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_heart"
                android:alpha="0.3"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aşk Uyumu"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textAlignment="center"
                android:textColor="@color/m3_cosmic_star"
                android:fontFamily="@font/bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İsim ve doğum tarihi girerek aşk uyumunuzu öğrenin."
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:textColor="@color/m3_cosmic_shimmer"
                android:fontFamily="@font/regular" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>