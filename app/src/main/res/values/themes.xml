<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#6B46C1</item>
        <item name="colorPrimaryDark">#553C9A</item>
        <item name="colorAccent">#8B5CF6</item>
        <item name="android:windowBackground">#F9FAFB</item>
        <item name="android:textColorPrimary">#111827</item>
        <item name="android:textColorSecondary">#6B7280</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/m3_cosmic_primary</item>
        <item name="colorOnSurface">@color/m3_cosmic_on_surface</item>
        <item name="colorSurface">@color/m3_cosmic_surface</item>
    </style>

    <!-- Full Screen Theme -->
    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- App Bar Themes -->


    <!-- Text Appearances -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#111827</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6B7280</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6B7280</item>
    </style>

    <style name="TextAppearance.App.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#6B7280</item>
    </style>

    <!-- Input Field Styles -->
    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#6B46C1</item>
        <item name="hintTextColor">#6B7280</item>
        <item name="android:textColorHint">#6B7280</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimaryStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#6B46C1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>

    </style>

    <style name="ButtonSecondaryStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#6B46C1</item>
        <item name="android:textColor">#6B46C1</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonPremiumStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#F59E0B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ButtonDangerStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#EF4444</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Card Styles -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="PremiumCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">#FEF3C7</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="ReadingCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Tab Layout Styles -->
    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">#6B7280</item>
        <item name="tabSelectedTextColor">#6B46C1</item>
        <item name="tabIndicatorColor">#6B46C1</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">#6B46C1</item>
        <item name="itemIconTint">#FFFFFF</item>
        <item name="itemTextColor">#FFFFFF</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">#6B46C1</item>
    </style>

    <style name="ProgressBarHorizontalStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">#6B46C1</item>
        <item name="android:progressBackgroundTint">#E5E7EB</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <!-- Switch Styles -->
    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">#FFFFFF</item>
        <item name="trackTint">#6B46C1</item>
    </style>

    <!-- FloatingActionButton Style -->
    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#6B46C1</item>
        <item name="tint">#FFFFFF</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Splash Screen Style -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">#6B46C1</item>
        <item name="android:statusBarColor">#6B46C1</item>
        <item name="android:navigationBarColor">#6B46C1</item>
    </style>

    <!-- Dialog Styles -->
    <style name="DialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">#6B46C1</item>
        <item name="colorAccent">#8B5CF6</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/ButtonPrimaryStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonSecondaryStyle</item>
    </style>

    <!-- Divider Style -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#E5E7EB</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Rating Bar Style -->
    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">#F59E0B</item>
        <item name="android:progressBackgroundTint">#E5E7EB</item>
        <item name="android:secondaryProgressTint">#F59E0B</item>
    </style>

    <!-- Chip Style -->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">#F3F4F6</item>
        <item name="android:textColor">#374151</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeColor">#6B46C1</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Spinner Style -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">#374151</item>
    </style>

    <!-- Checkbox Style -->
    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">#6B46C1</item>
        <item name="android:textColor">#374151</item>
    </style>

    <!-- RadioButton Style -->
    <style name="RadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">#6B46C1</item>
        <item name="android:textColor">#374151</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">#6B46C1</item>
        <item name="titleTextColor">#FFFFFF</item>

        <item name="navigationIconTint">#FFFFFF</item>
    </style>

    <!-- Onboarding Styles -->
    <style name="OnboardingTitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#111827</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="OnboardingDescriptionStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6B7280</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>