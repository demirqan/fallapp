<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/m3_cosmic_background"
                android:centerColor="@color/m3_cosmic_secondary"
                android:endColor="@color/m3_cosmic_primary" />
        </shape>
    </item>
    
    <!-- Subtle overlay -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="150%"
                android:centerX="0.8"
                android:centerY="0.2"
                android:startColor="#10FFD700"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>