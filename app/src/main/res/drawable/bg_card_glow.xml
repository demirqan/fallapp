<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/m3_cosmic_glow">
    <item>
        <layer-list>
            <!-- Glow effect -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <gradient
                        android:type="radial"
                        android:gradientRadius="200%"
                        android:centerX="0.5"
                        android:centerY="0.5"
                        android:startColor="#209966ff"
                        android:endColor="#00000000" />
                </shape>
            </item>
            
            <!-- Card background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <gradient
                        android:angle="135"
                        android:startColor="#1A1a0033"
                        android:centerColor="#2A2d0052"
                        android:endColor="#1A1a0033"
                        android:type="linear" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/m3_cosmic_glow" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>