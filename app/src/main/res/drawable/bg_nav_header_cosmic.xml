<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/m3_cosmic_primary"
                android:centerColor="@color/m3_cosmic_secondary"
                android:endColor="@color/m3_cosmic_nebula" />
        </shape>
    </item>
    
    <!-- Overlay pattern -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerX="0.8"
                android:centerY="0.2"
                android:startColor="#20FFD700"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>