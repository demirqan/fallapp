<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="@color/m3_cosmic_primary"
                android:endColor="@color/m3_cosmic_secondary" />
        </shape>
    </item>
    
    <!-- Center icon placeholder -->
    <item
        android:width="32dp"
        android:height="32dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/m3_cosmic_tertiary" />
        </shape>
    </item>
</layer-list>