<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kamera ile çekilen fotoğraflar için -->
    <external-files-path
        name="images"
        path="Pictures/" />

    <!-- Internal storage'daki dosyalar için -->
    <files-path
        name="internal_files"
        path="." />

    <!-- Cache directory için -->
    <cache-path
        name="cache_files"
        path="." />

    <!-- External storage root için -->
    <external-path
        name="external_files"
        path="." />

    <!-- Shared storage için -->
    <external-cache-path
        name="external_cache"
        path="." />
</paths>