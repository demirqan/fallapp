<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    
    <!-- Frame with gradient border -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="@color/m3_cosmic_tertiary"
                android:centerColor="@color/m3_cosmic_glow"
                android:endColor="@color/m3_cosmic_tertiary" />
        </shape>
    </item>
    
    <!-- Inner background -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/m3_cosmic_surface_variant" />
        </shape>
    </item>
</layer-list>